<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:background="#00000000"
    android:layout_height="260dp">

    <RelativeLayout
        android:id="@+id/luck_main_body"
        android:layout_width="340dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dhnote"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/lucky_left_time"
            android:text="声明：本应用所有功能均为免费"
            android:layout_marginTop="35dp"
            android:textColor="#ff1100"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_qr"
            android:layout_below="@id/lucky_left_time"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/qrcode"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="\u3000\u3000欢迎使用我爱英语。您可以打赏我们，成为我们的会员。成为会员后每次获得的奖励都将x4或者更多，使你快速的升级。打赏方法：微信扫描左侧二维码或添加“my5ieng”为好友。"
                android:layout_marginTop="5dp"
                android:textColor="#9a1c18"
                android:textSize="12sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/edt_root"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="200dp"
            android:orientation="horizontal"
            android:layout_height="30dp">
            <EditText
                android:id="@+id/edt"
                style="@style/username_edit_text"/>
        </LinearLayout>


        <TextView
            android:id="@+id/duihuan_msg"
            android:layout_width="match_parent"
            android:text="请输入会员序列号"
            android:layout_marginTop="15dp"
            android:textColor="#cb4301"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:paddingLeft="35dp"
            android:layout_above="@id/edt_root"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btn_duihuan"
            android:layout_width="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/jihuo"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="22dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/vip_get"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >
        <ImageView
            android:id="@+id/lucky_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:src="@drawable/lucky_close" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lucky_msg_root"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:alpha="0.5"
            android:background="@color/balck"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lucky_msg"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="240dp"
            android:layout_height="240dp">
             <ImageView
                 android:id="@+id/lucky_msg_img"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />
             <TextView
                 android:id="@+id/lucky_msg_text"
                 android:layout_alignTop="@id/lucky_msg_img"
                 android:text=""
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

             <ImageView
                 android:id="@+id/lucky_msg_ok"
                 android:layout_alignTop="@id/lucky_msg_text"
                 android:layout_marginTop="165dp"
                 android:layout_width="40dp"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/ok3"
                 android:layout_height="40dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>