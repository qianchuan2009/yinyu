<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyz.wayy.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:visibility="gone"
        style="@style/rl_titlebar" >

        <TextView
            android:id="@+id/titlebar"
            style="@style/txt_titlebar"
            android:text="首页" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/home_bg2"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_my"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/src_img_dlt"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_my"
            android:layout_alignStart="@+id/img_my"
            android:layout_below="@+id/img_my"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="朋友丙" />

        <ImageButton
            android:id="@+id/btnchoujiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/lucky_card_icon"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_marginStart="13dp" />

        <ImageButton
            android:id="@+id/duihua"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/btnchoujiang"
            android:layout_alignStart="@+id/btnchoujiang"
            android:layout_below="@+id/btnchoujiang"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/duihuan" />

        <ImageButton
            android:id="@+id/btnvip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/duihua"
            android:layout_below="@+id/duihua"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/vip" />

    </RelativeLayout>
</LinearLayout>
